{
  "openapi":"3.0.0",
  "info": {
    "title": "Atlas",
    "description": "This is a documentation about Atlas API.",
    "contact": {
      "email": "gu.sabino@hotmail.com"
    },
    "version": "1.0.0"
  },
  "tags":[{
    "name": "User",
    "description": "Users management"
  }],
  "paths": {
    "/users": {
      "post": {
        "tags":["User"],
        "summary":"Create a new user",
        "description": "The route must receive `name` and `email` within the body of the request in order to be able to register a user.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "User name sample",
                  "email": "user@sample.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {          
            "description": "Created",
            "content": {
              "application/json": {
                "schema":{
                  "type":"object",
                  "properties": {
                    "admin":{
                      "type":"boolean",
                      "enum":[""],
                      "default": false
                    },
                    "id": {
                      "type":"string"
                    },
                    "name":{
                      "type":"string"
                    },
                    "email":{
                      "type":"string"
                    },
                    "created_at":{
                      "type":"Date"
                    },
                    "updated_at":{
                      "type":"Date"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "329fg842-d3as-d45h-hg79-9qwe78eg",
                    "name": "User name sample",
                    "email": "user@sample.com",
                    "created_at": "2021-05-17T22:10:32.992z",
                    "updated_at": "2021-05-17T22:10:32.992z"
                  }
                }
              }
            }
          },
          "400": {          
            "description": "Email is already used",
            "content": {
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error": {
                      "type":"string"
                    }
                  },
                  "example":{
                    "error": "This email is already in use."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags":["User"],
        "summary":"Returns all users",
        "description": "Only `admin` can access",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {          
            "description": "Operation performed successfully",
            "content": {
              "application/json": {
                "schema":{
                  "type":"array",
                  "items": {
                    "type":"object",
                    "properties": {
                      "admin":{
                        "type":"boolean",
                        "enum":[""],
                        "default": false
                      },
                      "id": {
                        "type":"string"
                      },
                      "name":{
                        "type":"string"
                      },
                      "email":{
                        "type":"string"
                      },
                      "created_at":{
                        "type":"Date"
                      },
                      "updated_at":{
                        "type":"Date"
                      }                    
                    },
                    "example": { 
                      "admin": false,
                      "id": "329fg842-d3as-d45h-hg79-9qwe78eg",
                      "name": "User name sample",
                      "email": "user@sample.com",
                      "created_at": "2021-05-17T22:10:32.992z",
                      "updated_at": "2021-05-17T22:10:32.992z"
                    }
                  }
                }
              }
            }
          },
          "400": {          
            "description": "User without permission or user not found",
            "content": {
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error": {
                      "type":"string"
                    }
                  },
                  "example":{
                    "error": "You need to be an administrator to list all users."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags":["User"],
        "summary": "Returns a user",
        "description": "The route parameters must receive a `user_id` and return the user's information found by the response body.",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {          
            "description": "Operation Successfully carried out",
            "content": {
              "application/json": {
                "schema":{
                  "type":"array",
                  "items": {
                    "type":"object",
                    "properties": {
                      "admin":{
                        "type":"boolean",
                        "enum":[""],
                        "default": false
                      },
                      "id": {
                        "type":"string"
                      },
                      "name":{
                        "type":"string"
                      },
                      "email":{
                        "type":"string"
                      },
                      "created_at":{
                        "type":"Date"
                      },
                      "updated_at":{
                        "type":"Date"
                      } 
                    },
                    "example": {
                      "admin": false,
                      "id": "329fg842-d3as-d45h-hg79-9qwe78eg",
                      "name": "User name sample",
                      "email": "user@sample.com",
                      "created_at": "2021-05-17T22:10:32.992z",
                      "updated_at": "2021-05-17T22:10:32.992z"
                    }
                  }
                }
              }
            }
          },
          "404": {          
            "description": "User not found",
            "content": {
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error": {
                      "type":"string"
                    }
                  },
                  "example":{
                    "error": "User not found."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags":["User"],
        "summary":"Turn user in admin",
        "description": "The route parameter must receive `user_id` and return the user object with` admin: true`",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {          
            "description": "Operation Successfully carried out",
            "content": {
              "application/json": {
                "schema":{
                  "type":"array",
                  "items": {
                    "type":"object",
                    "properties": {
                      "admin":{
                        "type":"boolean",
                        "enum":[""],
                        "default": false
                      },
                      "id": {
                        "type":"string"
                      },
                      "name":{
                        "type":"string"
                      },
                      "email":{
                        "type":"string"
                      },
                      "created_at":{
                        "type":"Date"
                      },
                      "updated_at":{
                        "type":"Date"
                      }
                    },
                    "example": {
                      "admin": false,
                      "id": "329fg842-d3as-d45h-hg79-9qwe78eg",
                      "name": "User name sample",
                      "email": "user@sample.com",
                      "created_at": "2021-05-17T22:10:32.992z",
                      "updated_at": "2021-05-17T22:10:32.992z"
                    }
                  }
                }
              }
            }
          },
          "400": {          
            "description": "User without permission or user not found",
            "content": {
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error": {
                      "type":"string"
                    }
                  },
                  "example":{
                    "error": "You need to be administrator to list all users."
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  
}